# Core Configuration
NODE_ENV=development
PORT=4002
SECRET=your-secret-key-here

# Application URLs
NEXT_PUBLIC_APP_URL=http://127.0.0.1:4002
NEXT_PUBLIC_APP_ANALYTICS=UA-000000-01

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/nekometrics
DATABASE_NAME=nekometrics

# Email Configuration (Mailgun or SMTP)
EMAIL_SERVER_HOST=smtp.mailgun.org
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@yourdomain.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=Nekometrics <noreply@yourdomain.com>

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Mailchimp OAuth
MAILCHIMP_CLIENT_ID=your-mailchimp-client-id
MAILCHIMP_CLIENT_SECRET=your-mailchimp-client-secret

# Twitter OAuth (Consumer Keys)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret